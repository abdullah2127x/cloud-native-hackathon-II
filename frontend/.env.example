# Frontend Environment Configuration
# Copy this file to .env.local and update with your actual values

# Application URLs
# URL where your Next.js app is running
NEXT_PUBLIC_APP_URL=http://localhost:3000

# URL where your FastAPI backend is running
NEXT_PUBLIC_API_URL=http://localhost:8000

# Database Configuration for Better Auth
# PostgreSQL connection string (same database as backend)
# Better Auth manages its own tables (user, session, verification, etc.)
# Format: postgresql://username:password@host:port/database
# Example with Neon Serverless: postgresql://user:password@ep-example-123456.us-east-2.aws.neon.tech/neondb?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/todo_app

# Better Auth Secret
# Generate a secure random secret with: openssl rand -base64 32
# IMPORTANT: Keep this secret and never commit it to version control
BETTER_AUTH_SECRET=your-super-secret-key-here-replace-with-random-string

# Node Environment
NODE_ENV=development

# Better Auth URL (Optional)
# URL where Better Auth server is running (usually same as NEXT_PUBLIC_APP_URL)
# BETTER_AUTH_URL=http://localhost:3000

# Phase 3+ Features (Optional, for future phases)
# NEXT_PUBLIC_NOTIFICATION_SERVICE=http://localhost:9000
# NEXT_PUBLIC_ANALYTICS_KEY=your-analytics-key
# NEXT_PUBLIC_STORAGE_BUCKET=your-storage-bucket
