{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "add_task",
  "description": "Create a new todo task for the authenticated user",
  "type": "object",
  "properties": {
    "user_id": {
      "type": "string",
      "description": "Authenticated user ID",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "description": "Task title",
      "minLength": 1,
      "maxLength": 200
    },
    "description": {
      "type": "string",
      "description": "Task description (optional)",
      "maxLength": 1000,
      "default": ""
    }
  },
  "required": ["user_id", "title"],
  "examples": [
    {
      "user_id": "auth0|abc123",
      "title": "Buy groceries",
      "description": "Milk, eggs, bread"
    }
  ],
  "response": {
    "type": "object",
    "properties": {
      "task_id": {
        "type": "integer",
        "description": "ID of the created task"
      },
      "status": {
        "type": "string",
        "const": "created",
        "description": "Always 'created' for successful creation"
      },
      "title": {
        "type": "string",
        "description": "Title of the created task"
      },
      "message": {
        "type": "string",
        "const": "Task created successfully",
        "description": "Success message"
      }
    },
    "required": ["task_id", "status", "title", "message"]
  }
}
